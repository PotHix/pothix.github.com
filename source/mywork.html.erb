<header class="page-header page-header--portfolio">
  <h1 class='blog-title'><span>My Work</span></h1>
  <p class='blog-subtitle'>Here is things I've done related to programming</p>
</header>

<ul class="portfolio-filter">
  <li class="button filter" data-filter="all">All</li>
  <li class="button filter" data-filter="project">Projects</li>
  <li class="button filter" data-filter="presentation">Presentations</li>
</ul>

<section id="portfolio-filter" class="grids portfolio-items">

  <% mywork.each do |work| %>
  <article class="grid-4 portfolio type-portfolio status-publish has-post-thumbnail skill-ui-design ui-design mix <%= work["type"] %>">
    <figure>
      <a href="javascript:void(0);" rel="bookmark">
        <img width="366" height="366" src="images/mywork/<%= work["image"] %>" class="attachment-portfolio-thumbnail wp-post-image" />
      </a>
      <figcaption>
        <h4><%= work["title"] %></h4>
        <p><%= work["description"] %></p>
        <a href="<%= work["link"] %>" rel="bookmark" class="button"><%= work["text"] %></a>
      </figcaption>
    </figure>
  </article>

  <% end %>

</section>
